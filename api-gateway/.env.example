# API Gateway Environment Configuration

## Development Environment
JWT_SECRET=e-wallet-super-secret-key-for-jwt-authentication-2024-minimum-256-bits
JWT_EXPIRATION=86400000

SERVER_PORT=8080

EUREKA_SERVER_URL=http://localhost:8761/eureka/

REDIS_HOST=localhost
REDIS_PORT=6379

ZIPKIN_BASE_URL=http://localhost:9411

## Rate Limiting
RATE_LIMIT_REPLENISH_RATE=100
RATE_LIMIT_BURST_CAPACITY=120

## Circuit Breaker
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=50
CIRCUIT_BREAKER_WAIT_DURATION=10s
CIRCUIT_BREAKER_SLIDING_WINDOW_SIZE=10

## Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_GATEWAY=DEBUG

## CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
